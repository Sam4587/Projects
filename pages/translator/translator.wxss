/* 翻译页面样式 */
.translator-container {
  background: linear-gradient(135deg, #fef7f7 0%, #fffaf0 50%, #fef7f7 100%);
  min-height: 100vh;
  padding: 0;
}

/* 内容区域 */
.content {
  padding: 24rpx;
}

.card {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.icon {
  font-size: 32rpx;
}

/* 表单组 */
.form-group {
  padding: 0 32rpx;
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #1f2937;
}

.form-input {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx;
  background: #fafafa;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1f2937;
  box-sizing: border-box;
  line-height: 1.6;
}

.form-input:focus {
  outline: none;
  border-color: #E53935;
  box-shadow: 0 0 0 4rpx rgba(229, 57, 53, 0.1);
}

/* 分类网格 */
.category-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.category-btn {
  padding: 20rpx 16rpx;
  text-align: center;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fafafa;
  transition: all 0.3s ease;
}

.category-btn.active {
  background: linear-gradient(135deg, #E53935 0%, #B71C1C 100%);
  color: white;
  border-color: #E53935;
}

/* 按钮样式 */
.btn {
  width: calc(100% - 64rpx);
  margin: 0 32rpx 32rpx;
  height: 88rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #E53935 0%, #B71C1C 100%);
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(229, 57, 53, 0.4);
}

.btn-primary:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(229, 57, 53, 0.4);
}

.btn-secondary {
  background: white;
  color: #E53935;
  border: 2rpx solid #E53935;
}

.btn-secondary:active {
  background: rgba(229, 57, 53, 0.1);
}

/* 结果卡片 */
.result-card {
  margin: 0 32rpx 32rpx;
  padding: 24rpx;
  background: #fef7f7;
  border-radius: 16rpx;
  border: 1rpx solid #f0f0f0;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #1f2937;
}

.result-value {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.6;
  padding: 16rpx;
  background: white;
  border-radius: 8rpx;
  border: 1rpx solid #f0f0f0;
}

/* 短语卡片 */
.phrase-card {
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: white;
  border-radius: 12rpx;
  border: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.phrase-card:active {
  background: rgba(229, 57, 53, 0.05);
}

.phrase-header {
  margin-bottom: 12rpx;
}

.phrase-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.phrase-preview {
  margin-top: 8rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
}

.preview-label {
  font-size: 24rpx;
  color: #6b7280;
  margin-right: 8rpx;
}

.preview-text {
  font-size: 24rpx;
  color: #4b5563;
  line-height: 1.5;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 64rpx 32rpx;
  color: #6b7280;
}

.empty-text {
  font-size: 28rpx;
  margin: 16rpx 0;
}

.empty-tip {
  font-size: 24rpx;
  line-height: 1.5;
}

/* 底部间距 */
.bottom-space {
  height: 120rpx;
}
