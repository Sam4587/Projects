/* pages/stats/stats.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fef7f7 0%, #fffaf0 50%, #fef7f7 100%);
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
  color: #fffaf0;
  padding: 40rpx;
  text-align: center;
}

.header-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 16rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #ffd700;
}

/* 标签栏 */
.tab-bar {
  display: flex;
  background: #fff;
  border-bottom: 2rpx solid rgba(220, 38, 38, 0.1);
}

.tab-item {
  flex: 1;
  padding: 24rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #8b5a2b;
  border-bottom: 4rpx solid transparent;
  transition: all 0.3s;
}

.tab-item.active {
  color: #dc2626;
  border-bottom-color: #dc2626;
  font-weight: 600;
}

/* Tab 内容 */
.tab-content {
  padding: 20rpx;
}

/* 统计卡片 */
.stat-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(220, 38, 38, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #8b4513;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgba(220, 38, 38, 0.1);
}

/* 统计网格 */
.stat-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-item {
  background: linear-gradient(135deg, #fffaf0 0%, #fff5e6 100%);
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
  border: 2rpx solid rgba(220, 38, 38, 0.1);
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #dc2626;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #8b5a2b;
  margin-top: 8rpx;
}

/* 列表 */
.list {
  max-height: 400rpx;
  overflow-y: auto;
}

.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(220, 38, 38, 0.1);
}

.list-item:last-child {
  border-bottom: none;
}

.item-name {
  font-size: 28rpx;
  color: #8b4513;
  flex: 1;
}

.item-value {
  font-size: 26rpx;
  color: #dc2626;
  font-weight: 600;
}

/* 反馈列表 */
.feedback-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.feedback-item {
  background: #fffaf0;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid rgba(220, 38, 38, 0.1);
}

.feedback-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.feedback-type {
  font-size: 26rpx;
  color: #dc2626;
  font-weight: 600;
}

.feedback-rating {
  font-size: 24rpx;
  color: #ffd700;
}

.feedback-content {
  font-size: 28rpx;
  color: #8b4513;
  line-height: 1.6;
  display: block;
  margin-bottom: 12rpx;
}

.feedback-time {
  font-size: 22rpx;
  color: #999;
}

/* 事件列表 */
.event-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.event-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(220, 38, 38, 0.1);
}

.event-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.event-dot.pageview { background: #dc2626; }
.event-dot.event { background: #ffd700; }
.event-dot.error { background: #ef4444; }
.event-dot.performance { background: #10b981; }

.event-info {
  flex: 1;
}

.event-type {
  font-size: 26rpx;
  color: #8b4513;
  font-weight: 600;
  display: block;
}

.event-detail {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
  display: block;
}

.event-time {
  font-size: 22rpx;
  color: #999;
  flex-shrink: 0;
}

/* 性能列表 */
.performance-list {
  max-height: 500rpx;
  overflow-y: auto;
}

.performance-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(220, 38, 38, 0.1);
}

.metric-name {
  font-size: 28rpx;
  color: #8b4513;
  font-weight: 600;
}

.metric-stats {
  text-align: right;
}

.metric-avg {
  font-size: 26rpx;
  color: #dc2626;
  font-weight: 600;
  display: block;
}

.metric-range {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
  display: block;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 64rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 操作栏 */
.action-bar {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.btn {
  flex: 1;
  padding: 24rpx 0;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  border: none;
}

.btn-secondary {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  color: #fff;
}

.btn-danger {
  background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
  color: #fff;
}

.btn:active {
  opacity: 0.8;
}
