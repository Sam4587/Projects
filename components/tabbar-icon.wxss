/* 国潮风格导航栏图标组件 */
.tabbar-icon-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 8rpx;
  transition: all 0.3s ease;
  position: relative;
}

.tabbar-icon-container::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: radial-gradient(circle, rgba(229, 57, 53, 0.1) 0%, transparent 70%);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: all 0.3s ease;
}

.tabbar-icon-container.active {
  color: var(--primary-color);
  background: linear-gradient(135deg, rgba(229, 57, 53, 0.1) 0%, rgba(255, 215, 0, 0.05) 100%);
  text-shadow: 0 1rpx 2rpx rgba(229, 57, 53, 0.2);
}

.tabbar-icon-container.active::before {
  width: 120rpx;
  height: 120rpx;
}

/* 48x48像素标准尺寸图标 */
.tabbar-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  transition: all 0.3s ease;
}

.tabbar-icon-container.active .tabbar-icon {
  transform: scale(1.1);
  filter: drop-shadow(0 2rpx 4rpx rgba(229, 57, 53, 0.3));
}

