/* 计算器页面样式 */
.container {
  background: linear-gradient(135deg, #fef7f7 0%, #fffaf0 50%, #fef7f7 100%);
  min-height: 100vh;
  padding: 0;
}

/* 头部样式 */
.header {
  background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
  padding: 40rpx 32rpx;
  color: #fffaf0;
  text-align: center;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 内容区域 */
.content {
  padding: 24rpx;
}

.card {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.icon {
  font-size: 32rpx;
}

/* 表单组 */
.form-group {
  padding: 0 32rpx;
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #1f2937;
}

/* 分类网格 */
.category-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.category-btn {
  padding: 20rpx 16rpx;
  text-align: center;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fafafa;
  transition: all 0.3s ease;
}

.category-btn.active {
  background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
  color: white;
  border-color: #dc2626;
}

/* 按钮样式 */
.btn {
  width: calc(100% - 64rpx);
  margin: 0 32rpx 32rpx;
  height: 88rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
  color: white;
}

.btn-primary:disabled {
  background: #d1d5db;
  color: #6b7280;
}

/* 结果卡片 */
.result-card {
  padding: 32rpx;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  text-align: center;
}

.result-amount {
  font-size: 48rpx;
  font-weight: bold;
  color: #dc2626;
  text-align: center;
  margin-bottom: 16rpx;
}

.result-message {
  font-size: 28rpx;
  color: #6b7280;
  text-align: center;
  margin-bottom: 32rpx;
}

/* 伪反馈区域样式 */
.feedback-section {
  background: linear-gradient(135deg, #fffbf0 0%, #fff8e6 100%);
  border: 2rpx solid #fbbf24;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  position: relative;
}

.feedback-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #fbbf24, #f59e0b, #fbbf24);
}

.feedback-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.feedback-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #92400e;
  display: block;
  margin-bottom: 8rpx;
}

.feedback-desc {
  font-size: 26rpx;
  color: #a16207;
  opacity: 0.8;
}

.feedback-content {
  text-align: center;
}

.feedback-input-row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.feedback-label {
  font-size: 28rpx;
  color: #78350f;
  font-weight: 500;
}

.amount-input-container {
  display: flex;
  align-items: center;
  background: white;
  border: 2rpx solid #e5e7eb;
  border-radius: 8rpx;
  padding: 0 16rpx;
  height: 64rpx;
}

.amount-symbol {
  font-size: 28rpx;
  color: #6b7280;
  margin-right: 8rpx;
}

.amount-input {
  font-size: 28rpx;
  width: 120rpx;
  text-align: center;
  border: none;
  outline: none;
  background: transparent;
}

.amount-unit {
  font-size: 28rpx;
  color: #6b7280;
  margin-left: 8rpx;
}

.btn-secondary {
  background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
  color: #78350f;
  border: none;
  margin-bottom: 16rpx;
}

.btn-secondary:disabled {
  background: #d1d5db;
  color: #6b7280;
  opacity: 0.6;
}

.feedback-tip {
  text-align: center;
}

.tip-text {
  font-size: 24rpx;
  color: #a16207;
  opacity: 0.7;
  line-height: 1.4;
}

/* 免责声明 */
.disclaimer-box {
  background: #fef2f2;
  border: 1rpx solid #fecaca;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.disclaimer-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #dc2626;
  margin-bottom: 8rpx;
}

.disclaimer-text {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.4;
}

/* 吉利数字区域 */
.lucky-section {
  background: #f0fdf4;
  border: 1rpx solid #bbf7d0;
  border-radius: 12rpx;
  padding: 24rpx;
}

.lucky-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.lucky-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #065f46;
  display: block;
  margin-bottom: 4rpx;
}

.lucky-desc {
  font-size: 24rpx;
  color: #059669;
  opacity: 0.8;
}

.lucky-numbers-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.lucky-number-card {
  text-align: center;
}

.number-circle {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 8rpx;
}

.lucky-number {
  font-size: 24rpx;
  font-weight: bold;
  color: white;
}

.unit-text {
  font-size: 20rpx;
  color: #6b7280;
}

.lucky-tips {
  text-align: center;
}

.tips-text {
  font-size: 22rpx;
  color: #059669;
  font-style: italic;
}

/* Banner广告区域样式 */
.ad-section {
  margin: 20rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-ad-container {
  background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
  height: 180rpx; /* 20:7 比例的近似值 */
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  border: 2rpx dashed #d1d5db;
}

.ad-placeholder {
  text-align: center;
  color: #9ca3af;
}

.ad-text {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.ad-loading {
  animation: pulse 2s infinite;
}

.loading-text {
  font-size: 24rpx;
  color: #6b7280;
}

@keyframes pulse {
  0% {
    opacity: 0.6;
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 0.6;
  }
}

/* 新增样式：选择器触发器 */
.selector-trigger {
  background: #fafafa;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s ease;
}

.selector-trigger:active {
  background: #f0f0f0;
}

.selector-text {
  font-size: 28rpx;
  color: #1f2937;
  flex: 1;
}

.selector-arrow {
  font-size: 24rpx;
  color: #6b7280;
}

.optional-tag {
  font-size: 22rpx;
  color: #a16207;
  margin-left: 8rpx;
  opacity: 0.7;
}

/* 新增样式：预算设置触发器 */
.budget-trigger {
  background: linear-gradient(135deg, #fef3c7 0%, #fffaf0 100%);
  border: 2rpx solid #fbbf24;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  transition: all 0.3s ease;
}

.budget-trigger:active {
  transform: scale(0.98);
}

.budget-icon {
  font-size: 28rpx;
}

.budget-text {
  font-size: 26rpx;
  color: #1f2937;
  font-weight: 500;
}

/* 新增样式：弹窗遮罩层 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  align-items: flex-end;
  animation: fadeIn 0.2s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 新增样式：弹窗内容 */
.modal-content {
  background: white;
  width: 100%;
  border-radius: 24rpx 24rpx 0 0;
  padding: 0;
  animation: slideUp 0.3s ease;
  max-height: 70vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 新增样式：弹窗头部 */
.modal-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fafafa;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

.modal-close {
  font-size: 40rpx;
  color: #6b7280;
  line-height: 1;
}

/* 新增样式：预算弹窗 */
.budget-modal {
  border-radius: 24rpx;
}

.budget-input-section {
  padding: 32rpx;
}

.input-group {
  display: flex;
  align-items: center;
  background: #fafafa;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.input-label {
  font-size: 28rpx;
  color: #1f2937;
  width: 160rpx;
}

.budget-input {
  flex: 1;
  font-size: 28rpx;
  color: #1f2937;
  border: none;
  outline: none;
  background: transparent;
}

.input-unit {
  font-size: 28rpx;
  color: #6b7280;
  margin-left: 16rpx;
}

.budget-tips {
  padding: 0 32rpx 24rpx;
}

/* 新增样式：选择器弹窗 */
.picker-modal {
  border-radius: 24rpx;
  max-height: 60vh;
}

.picker-list {
  flex: 1;
  overflow-y: auto;
}

.picker-item {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: background 0.2s ease;
}

.picker-item:active {
  background: #f5f5f5;
}

.picker-item.selected {
  background: linear-gradient(135deg, #fef3c7 0%, #fffaf0 100%);
}

.picker-text {
  font-size: 28rpx;
  color: #1f2937;
  flex: 1;
}

.picker-check {
  font-size: 32rpx;
  color: #dc2626;
  font-weight: bold;
}

.modal-btn {
  margin: 32rpx;
  border-radius: 0 0 24rpx 24rpx;
}

/* 新增样式：智能推荐结果 */
.result-main {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.result-amount-section {
  text-align: center;
  margin-bottom: 24rpx;
}

.result-confidence {
  margin-top: 16rpx;
}

.confidence-label {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 8rpx;
}

.result-range-section {
  padding: 32rpx;
  background: #f0fdf4;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  text-align: center;
}

.range-label {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.range-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #dc2626;
}

/* 新增样式：推荐依据 */
.result-factors {
  padding: 32rpx;
}

.factors-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.factors-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.factor-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.factor-item:last-child {
  border-bottom: none;
}

.factor-label {
  font-size: 26rpx;
  color: #6b7280;
}

.factor-value {
  font-size: 26rpx;
  color: #1f2937;
  font-weight: 500;
}

/* 新增样式：地域习俗 - 吉利数字网格 */
.result-customs .numbers-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 8rpx;
}

.result-customs .number-chip {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
  color: white;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  min-width: 64rpx;
  height: 48rpx;
  transition: all 0.3s ease;
}

.result-customs .number-chip:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.result-customs .chip-text {
  color: white;
}

/* 新增样式：地域习俗 */
.result-customs {
  padding: 32rpx;
  background: #f0fdf4;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.customs-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.customs-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.customs-tips {
  background: #fff9c6;
  padding: 16rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid #dc2626;
}

.customs-traditions {
  padding: 0 16rpx;
}

.tradition-item {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.4;
}

.customs-numbers {
  padding: 0 16rpx;
}

.numbers-label {
  font-size: 24rpx;
  color: #6b7280;
}

.numbers-list {
  font-size: 24rpx;
  color: #1f2937;
  font-weight: 500;
}

/* 新增样式：历史对比 */
.result-comparison {
  padding: 32rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fffaf0 100%);
  border-radius: 12rpx;
  text-align: center;
}

.comparison-title {
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
}

.comparison-diff {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.diff-value {
  font-size: 22rpx;
  color: #a16207;
}

.diff-amount {
  font-size: 28rpx;
  font-weight: bold;
}

.diff-amount.positive {
  color: #10b981;
}

.diff-amount.negative {
  color: #dc2626;
}

/* 新增样式：开发者测试入口 */
.dev-test-entry {
  margin-top: 24rpx;
  padding: 16rpx 24rpx;
  text-align: center;
  font-size: 24rpx;
  color: #9ca3af;
  transition: all 0.3s ease;
}

.dev-test-entry:active {
  color: #dc2626;
}

.dev-test-text {
  opacity: 0.5;
}

/* 反馈历史按钮样式 */
.history-btn-wrapper {
  position: fixed;
  bottom: 200rpx;
  right: 20rpx;
  z-index: 900;
  opacity: 0.8;
  transition: all 0.3s ease;
}

.history-btn-wrapper:active {
  opacity: 1;
  transform: scale(1.05);
}

.history-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: white;
  border-radius: 50rpx;
  box-shadow: 0 6rpx 20rpx rgba(82, 196, 26, 0.3);
  gap: 8rpx;
}

.history-icon {
  font-size: 28rpx;
}

.history-text {
  font-size: 24rpx;
  font-weight: 600;
}
