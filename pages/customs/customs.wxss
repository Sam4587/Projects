/* 地域习俗页面样式 */
.customs-container {
  background: linear-gradient(135deg, #fef7f7 0%, #fffaf0 50%, #fef7f7 100%);
  min-height: 100vh;
  padding: 0;
}

/* 内容区域 */
.content {
  padding: 24rpx;
}

.card {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.icon {
  font-size: 32rpx;
}

/* 表单组 */
.form-group {
  padding: 0 32rpx;
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #1f2937;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  background: #fafafa;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1f2937;
  box-sizing: border-box;
}

.form-input:focus {
  outline: none;
  border-color: #E53935;
  box-shadow: 0 0 0 4rpx rgba(229, 57, 53, 0.1);
}

/* 标签切换 */
.tab-list {
  display: flex;
  margin: 0 32rpx 32rpx;
  gap: 16rpx;
  background: #fafafa;
  border-radius: 12rpx;
  padding: 8rpx;
}

.tab-item {
  flex: 1;
  padding: 20rpx 16rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: transparent;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #E53935 0%, #B71C1C 100%);
  color: white;
}

/* 习俗内容 */
.customs-content {
  margin: 0 32rpx 32rpx;
  padding: 24rpx;
  background: #fef7f7;
  border-radius: 16rpx;
  border: 1rpx solid #f0f0f0;
}

.customs-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #1f2937;
}

.customs-text {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

/* 习俗项目 */
.customs-item {
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: white;
  border-radius: 12rpx;
  border: 1rpx solid #f0f0f0;
}

.customs-item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.customs-item-content {
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.5;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 64rpx 32rpx;
  color: #6b7280;
}

.empty-text {
  font-size: 28rpx;
  margin: 16rpx 0;
}

.empty-tip {
  font-size: 24rpx;
  line-height: 1.5;
}

/* 底部间距 */
.bottom-space {
  height: 120rpx;
}
