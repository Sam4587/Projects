.tabbar-text {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
  transition: all 0.3s ease;
}

.tabbar-icon-container.active .tabbar-text {
  color: var(--primary-color);
  text-shadow: 0 1rpx 2rpx rgba(229, 57, 53, 0.2);
}

/* 点击反馈动画 */
@keyframes tabbarClick {
  0% { transform: scale(1); }
  50% { transform: scale(0.95); }
  100% { transform: scale(1); }
}

.tabbar-icon-container:active {
  animation: tabbarClick 0.2s ease;
}