/* components/feedback-history-modal/feedback-history-modal.wxss */

.feedback-history-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 600rpx;
  max-height: 80%;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx 40rpx rgba(0, 0, 0, 0.15);
  z-index: 1001;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.modal-close {
  font-size: 48rpx;
  color: #999999;
  line-height: 1;
  cursor: pointer;
}

.history-scroll {
  flex: 1;
  overflow-y: auto;
  max-height: 800rpx;
}

.history-list {
  padding: 20rpx;
}

.history-item {
  background-color: #f9f9f9;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #4CAF50;
  transition: all 0.3s ease;
}

.history-item.item-failed {
  border-left-color: #f44336;
}

.history-item:active {
  transform: scale(1.02);
  box-shadow: 0 2rpx 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.item-time {
  font-size: 24rpx;
  color: #999999;
}

.item-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-weight: bold;
}

.status-success {
  background-color: #4CAF50;
  color: #ffffff;
}

.status-failed {
  background-color: #f44336;
  color: #ffffff;
}

.status-pending {
  background-color: #ff9800;
  color: #ffffff;
}

.item-content {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.content-rating {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.rating-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.rating-text {
  font-size: 28rpx;
  color: #ff9800;
  font-weight: bold;
}

.content-type {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.type-label {
  font-size: 26rpx;
  color: #666666;
  margin-right: 8rpx;
}

.type-value {
  font-size: 26rpx;
  color: #333333;
  font-weight: bold;
}

.content-text {
  margin-bottom: 16rpx;
}

.text-label {
  font-size: 26rpx;
  color: #666666;
  margin-right: 8rpx;
}

.text-value {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.5;
}

.item-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.action-btn {
  flex: 1;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: none;
}

.btn-retry {
  background-color: #4CAF50;
  color: #ffffff;
}

.btn-delete {
  background-color: #f44336;
  color: #ffffff;
}

.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  gap: 20rpx;
}

.btn {
  flex: 1;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #333333;
}

.btn-primary {
  background-color: #dc2626;
  color: #ffffff;
}
