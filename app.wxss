.decoration-top-left,
.decoration-top-right,
.decoration-bottom-left,
.decoration-bottom-right {
  position: fixed;
  font-size: 48rpx;
  color: rgba(220, 38, 38, 0.1);
  animation: decorationFloat 6s ease-in-out infinite;
  z-index: 0;
}

.decoration-top-left {
  top: 60rpx;
