/* 地域习俗页面样式 */
.customs-container {
  background: linear-gradient(135deg, #fef7f7 0%, #fffaf0 50%, #fef7f7 100%);
  min-height: 100vh;
  padding: 0;
}

/* 头部 */
.header {
  padding: 32rpx 24rpx 24rpx;
  text-align: center;
  position: relative;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #6b7280;
}

/* 地区对比按钮 */
.compare-btn {
  position: absolute;
  right: 24rpx;
  top: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 12rpx 16rpx;
  background: linear-gradient(135deg, #E53935 0%, #B71C1C 100%);
  border-radius: 12rpx;
  color: white;
}

.compare-icon {
  font-size: 28rpx;
}

.compare-text {
  font-size: 20rpx;
}

/* 内容区域 */
.content {
  padding: 24rpx;
}

.card {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.icon {
  font-size: 32rpx;
}

/* 表单组 */
.form-group {
  padding: 0 32rpx;
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #1f2937;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  background: #fafafa;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1f2937;
  box-sizing: border-box;
}

.form-input:focus {
  outline: none;
  border-color: #E53935;
  box-shadow: 0 0 0 4rpx rgba(229, 57, 53, 0.1);
}

/* 标签切换 */
.tab-list {
  display: flex;
  margin: 0 32rpx 32rpx;
  gap: 16rpx;
  background: #fafafa;
  border-radius: 12rpx;
  padding: 8rpx;
}

.tab-item {
  flex: 1;
  padding: 20rpx 16rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: transparent;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #E53935 0%, #B71C1C 100%);
  color: white;
}

/* 习俗内容 */
.customs-content {
  margin: 0 32rpx 32rpx;
  padding: 24rpx;
  background: #fef7f7;
  border-radius: 16rpx;
  border: 1rpx solid #f0f0f0;
}

.customs-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #1f2937;
}

.customs-text {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

/* 习俗项目 */
.customs-item {
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: white;
  border-radius: 12rpx;
  border: 1rpx solid #f0f0f0;
}

.customs-item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.customs-item-content {
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.5;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 64rpx 32rpx;
  color: #6b7280;
}

.empty-text {
  font-size: 28rpx;
  margin: 16rpx 0;
}

.empty-tip {
  font-size: 24rpx;
  line-height: 1.5;
}

/* 底部间距 */
.bottom-space {
  height: 120rpx;
}

/* 特殊场合卡片 */
.occasion-card {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: white;
  border-radius: 16rpx;
  border: 1rpx solid #f0f0f0;
}

.occasion-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.occasion-icon {
  font-size: 36rpx;
}

.occasion-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

.occasion-content {
  padding: 0 8rpx;
}

.occasion-amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #E53935;
  padding: 16rpx;
  background: #fef7f7;
  border-radius: 8rpx;
  text-align: center;
  margin: 16rpx 0;
}

.occasion-customs {
  margin-top: 16rpx;
}

.occasion-custom-item {
  padding: 12rpx 16rpx;
  margin-bottom: 8rpx;
  background: #fafafa;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #4b5563;
  display: flex;
  align-items: center;
}

.occasion-custom-item::before {
  content: '•';
  color: #E53935;
  margin-right: 8rpx;
  font-weight: bold;
}

/* 禁忌文化区域 */
.taboo-section {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #fef2f2;
  border-radius: 16rpx;
  border: 1rpx solid #fecaca;
}

.taboo-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.taboo-icon {
  font-size: 32rpx;
}

.taboo-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #991b1b;
}

.taboo-content {
  margin-top: 16rpx;
}

.taboo-item {
  padding: 12rpx 16rpx;
  margin-bottom: 8rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #7f1d1d;
  line-height: 1.5;
}

/* 文化故事区域 */
.story-section {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #fffbeb;
  border-radius: 16rpx;
  border: 1rpx solid #fde68a;
}

.story-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.story-icon {
  font-size: 32rpx;
}

.story-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #92400e;
}

.story-content {
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 8rpx;
}

.story-text {
  font-size: 28rpx;
  color: #78350f;
  line-height: 1.8;
  text-align: justify;
}

/* 空间工具类 */
.space-y-4 > view + view {
  margin-top: 24rpx;
}

.p-3 {
  padding: 24rpx;
}

.rounded-lg {
  border-radius: 16rpx;
}

.bg-red-50 {
  background: #fef2f2;
}

.bg-orange-50 {
  background: #fff7ed;
}

.bg-yellow-50 {
  background: #fefce8;
}

.border-yellow-200 {
  border-color: #fde68a;
  border-style: solid;
  border-width: 1rpx;
}

.text-sm {
  font-size: 24rpx;
}

.text-xl {
  font-size: 32rpx;
}

.text-lg {
  font-size: 28rpx;
}

.font-medium {
  font-weight: 500;
}

.font-bold {
  font-weight: bold;
}

.text-gray-600 {
  color: #4b5563;
}

.text-red-600 {
  color: #dc2626;
}

.text-orange-600 {
  color: #ea580c;
}

.text-yellow-800 {
  color: #92400e;
}

.text-yellow-700 {
  color: #a16207;
}

.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.justify-between {
  justify-content: space-between;
}

.mb-2 {
  margin-bottom: 16rpx;
}

.mt-4 {
  margin-top: 32rpx;
}

.mr-2 {
  margin-right: 16rpx;
}

.space-y-2 > view + view {
  margin-top: 16rpx;
}

.grid {
  display: grid;
}

.grid-cols-2 {
  grid-template-columns: repeat(2, 1fr);
}

.gap-4 {
  gap: 24rpx;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 90%;
  max-height: 80vh;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.compare-modal {
  max-width: 600rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

.modal-close {
  font-size: 28rpx;
  color: #6b7280;
}

.modal-body {
  flex: 1;
  max-height: 70vh;
  padding: 24rpx 32rpx;
  overflow-y: auto;
}

/* 对比区域选择 */
.compare-regions {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.compare-region-select {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.compare-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.compare-picker {
  padding: 20rpx;
  background: #fafafa;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1f2937;
}

/* 对比结果 */
.compare-result {
  margin-top: 24rpx;
}

.compare-section {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 16rpx;
}

.compare-section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.compare-table {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.compare-row {
  display: flex;
  padding: 16rpx;
  background: white;
  border-radius: 8rpx;
}

.compare-row-header {
  background: #fef7f7;
  font-weight: bold;
}

.compare-cell {
  flex: 1;
  padding: 0 8rpx;
  font-size: 24rpx;
  color: #4b5563;
  text-align: center;
  word-break: break-all;
}

.compare-cell-region {
  flex: 0.8;
}

.compare-cell-label {
  flex: 0.8;
  text-align: left;
  font-weight: 600;
  color: #1f2937;
}

