/* pages/test/dingtalk-test.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
}

/* 状态卡片 */
.status-section {
  margin-bottom: 30rpx;
}

.status-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.status-card.testing {
  border-left: 8rpx solid #1890ff;
}

.status-card.completed {
  border-left: 8rpx solid #52c41a;
}

.status-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.status-message {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 30rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #e8e8e8;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #1890ff, #52c41a);
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  display: block;
}

/* 报告卡片 */
.report-section {
  margin-bottom: 30rpx;
}

.report-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  border-left: 8rpx solid #52c41a;
}

.report-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.report-stats {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #52c41a;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-top: 5rpx;
}

/* 结果列表 */
.results-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.results-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.result-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: flex-start;
}

.result-item:last-child {
  border-bottom: none;
}

.result-item.success {
  border-left: 8rpx solid #52c41a;
}

.result-item.failed {
  border-left: 8rpx solid #ff4d4f;
}

.result-icon {
  margin-right: 20rpx;
  font-size: 32rpx;
  line-height: 1;
}

.result-content {
  flex: 1;
}

.result-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.result-message {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 5rpx;
}

.result-time {
  font-size: 22rpx;
  color: #999;
  display: block;
}

/* 操作按钮 */
.actions-section {
  margin-bottom: 30rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  margin-bottom: 20rpx;
}

.btn-primary {
  background: #1890ff;
  color: white;
}

.btn-primary:disabled {
  background: #bae7ff;
  color: #8c8c8c;
}

.btn-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.btn-group .btn {
  flex: 1;
  min-width: 45%;
  margin-bottom: 0;
}

.btn-secondary {
  background: #f0f0f0;
  color: #333;
  border: 2rpx solid #d9d9d9;
}

.btn-clear {
  background: transparent;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
}

/* 说明区域 */
.instructions {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.instructions-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.instruction-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.instruction-item:last-child {
  margin-bottom: 0;
}

.bullet {
  color: #1890ff;
  font-size: 24rpx;
  margin-right: 15rpx;
  margin-top: 5rpx;
}

.instruction-text {
  font-size: 26rpx;
  color: #666;
  flex: 1;
  line-height: 1.4;
}